{
    /* 字型 */
    "editor.fontFamily": "XD, 'LXGW WenKai', Consolas, 'Courier New', monospace",
    /* 字體粗細 */
    "editor.fontWeight": "200",
    /* 什麼時候顯示折疊(在行號旁) */
    "editor.showFoldingControls": "mouseover",
    /* 提示出現的延遲(ms) */
    "editor.quickSuggestionsDelay": 10,
    /* 貼上時是否自動format */
    "editor.formatOnPaste": false,
    /* 文字超出畫面是否換行 */
    "editor.wordWrap": "on",
    /* 是否根據文件自動偵測editor.insertSpaces和editor.tabSize */
    "editor.detectIndentation": true,
    /* 按tab是否改成輸入空格 */
    "editor.insertSpaces": true,
    /* 按tab輸入幾個空格 */
    "editor.tabSize": 4,
    /* 是否顯示空白和tab字元 */
    "editor.renderControlCharacters": true,
    /* 何時顯示空白和tab字元 */
    "editor.renderWhitespace": "all",
    /* 是否在小地圖中渲染字體 */
    "editor.minimap.renderCharacters": false,
    /* 開關右邊小地圖 */
    "editor.minimap.enabled": false,
    /* 開關平滑滾動 */
    "editor.smoothScrolling": false,
    /* 開關光標平滑滾動 */
    "editor.cursorSmoothCaretAnimation": "on",
    /* 游標閃爍模式 */
    "editor.cursorBlinking": "smooth",
    /* 是否顯示括號配對輔助線 */
    "editor.guides.bracketPairs": true,
    /* 是否啟用隱形字元的醒目提示 */
    "editor.unicodeHighlight.invisibleCharacters": true,
    /* 是否啟用和ASCII混淆的字元的醒目提示 */
    "editor.unicodeHighlight.ambiguousCharacters": false,
    /* 貼上時是否自動format */
    "editor.formatOnType": true,
    /* 自訂VSCode語法高亮顏色 */
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "if/for/while/return/#define/#include",
                "scope": "keyword.control",
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ],
        "[Default Dark+]": {
            "types": "#41c9b0",
            "comments": "#7d7d7d",
            "functions": "#ccc541",
            "numbers": "#fa8500",
            "textMateRules": [
                {
                    "name": "parameters of functions",
                    "scope": "variable.parameter",
                    "settings": {
                        "fontStyle": "italic"
                    }
                }
            ]
        }
    },
    "editor.semanticTokenColorCustomizations": {
        "[Default Dark+]": {
            "enabled": true,
            "rules": {
                "constant": "#22c5ee",
                "enumMember": "#22c5ee"
            }
        }
    },
    /* 自訂VSCode主題中各種顏色 */
    "workbench.colorCustomizations": {
        "editor.background": "#1e1e1e",
        "[Default Dark+]": {
            "titleBar.activeBackground": "#1d212d",
            "titleBar.activeForeground": "#cccccc",
            "activityBar.background": "#1d212d",
            "activityBarBadge.background": "#fa8500",
            "tab.inactiveBackground": "#1e1e1e",
            "tab.activeForeground": "#f4f4e4",
            "tab.hoverForeground": "#fa8500",
            "editorGroupHeader.tabsBackground": "#1d212d",
            "tab.activeBackground": "#2f3649",
            "statusBar.background": "#2f3649",
            "statusBar.debuggingBackground": "#68217a",
            "statusBar.noFolderBackground": "#333333",
            "statusBar.foreground": "#cccccc",
            "terminal.background": "#1d212d",
            "terminal.foreground": "#cccccc",
            "panel.background": "#1d212d",
            "editor.foldBackground": "#2f3649cc",
            "breadcrumb.focusForeground": "#fa8500",
            "activityBarTop.background": "#1d212d",
            "sideBarActivityBarTop.border": "#1d212d",
            "sideBar.background": "#1d212d",
        }
    },
    "window.zoomLevel": 1,
    /* 視窗標題列和功能表的外觀 */
    "window.titleBarStyle": "custom",
    /* 終端機是否啟用GPU加速 */
    "terminal.integrated.gpuAcceleration": "off",
    /* 預設終端機 */
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    /* 終端機游標閃爍 */
    "terminal.integrated.cursorBlinking": true,
    /* 終端機游標樣式 */
    "terminal.integrated.cursorStyle": "line",
    /* 終端機游標寬度(只有游標樣式為line時有效) */
    "terminal.integrated.cursorWidth": 1,
    /* Markdown PDF相關設定 */
    "markdown-pdf.displayHeaderFooter": false,
    "markdown-pdf.highlightStyle": "github.css",
    "markdown-pdf.styles": [
        /* 自訂CSS樣式的路徑 */
        "D:\\\\GitHub\\\\VSCode Settings\\\\markdownpdf.css"
    ],
    "omnisharp.useModernNet": false,
    "remote.SSH.remotePlatform": {
        "ws4.csie.org": "linux",
        "ws5.csie.org": "linux",
        "ws2.csie.org": "linux"
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "cmake.configureSettings": {
        "CMAKE_TOOLCHAIN_FILE": "C:/src/vcpkg/scripts/buildsystems/vcpkg.cmake"
    },
    "C_Cpp.default.compilerPath": "C:/msys64/mingw64/bin/g++.exe",
    "C_Cpp.files.exclude": {
        "**/.vscode": true,
        "**/.vs": true
    },
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
    },
    "todo-tree.tree.tagsOnly": true,
    "material-icon-theme.hidesExplorerArrows": true,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.accessibilitySupport": "on",
    "editor.fontLigatures": true,
    "editor.glyphMargin": false,
    "editor.lineNumbers": "off",
    "editor.scrollbar.verticalScrollbarSize": 12,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.activityBar.location": "bottom",
    "workbench.sideBar.location": "right",
    "workbench.layoutControl.enabled": false,
    "workbench.tree.indent": 12,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Default Dark+",
    "window.commandCenter": false,
    "window.dialogStyle": "custom",
    "window.title": "${dirty}${rootName}${separator}${profileName}",
    "window.menuBarVisibility": "toggle",
    "explorer.confirmDelete": true,
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": true,
    "apc.parts.font.family": {
        "titlebar": "Consolas",
        "sidebar": "Consolas, 'LXGW WenKai'",
        "statusbar": "Consolas, 'LXGW WenKai'",
    },
    "apc.header": {
        "height": 30,
        "default": 30,
        "fontSize": 12
    },
    // "apc.stylesheet": {
    //     ".title-label > h2": "display: none",
    // },
    "apc.statusBar": {
        "position": "editor-bottom",
        "fontSize": 11,
        "height": 22,
    },
    "breadcrumbs.enabled": true,
    "animations.Install-Method": "Apc Customize UI++",
    "apc.imports": [
        "file:///c:/Users/user/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.3/dist/updateHandler.js"
    ],
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.hovers.enabled": false,
    "files.exclude": {
        ".vscode": false
    },
}