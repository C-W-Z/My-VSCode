{
    /* 字型 */
    "editor.fontFamily": "XD, 'LXGW WenKai', Consolas, 'Courier New', monospace",
    /* 字體粗細 */
    "editor.fontWeight": "200",
    /* 什麼時候顯示折疊(在行號旁) */
    "editor.showFoldingControls" :"mouseover",
    /* 提示出現的延遲(ms) */
    "editor.quickSuggestionsDelay": 10,
    /* 貼上時是否自動format */
    "editor.formatOnPaste": false,
    /* 文字超出畫面是否換行 */
    "editor.wordWrap": "on",
    /* 是否根據文件自動偵測editor.insertSpaces和editor.tabSize */
    "editor.detectIndentation": true,
    /* 按tab是否改成輸入空格 */
    "editor.insertSpaces": true,
    /* 按tab輸入幾個空格 */
    "editor.tabSize": 4,
    /* 是否顯示空白和tab字元 */
    "editor.renderControlCharacters": true,
    /* 何時顯示空白和tab字元 */
    "editor.renderWhitespace": "all",
    /* 是否在小地圖中渲染字體 */
    "editor.minimap.renderCharacters": false,
    /* 開關右邊小地圖 */
    "editor.minimap.enabled": false,
    /* 開關平滑滾動 */
    "editor.smoothScrolling": false,
    /* 開關光標平滑滾動 */
    "editor.cursorSmoothCaretAnimation": "on",
    /* 游標閃爍模式 */
    "editor.cursorBlinking": "smooth",
    /* 是否顯示括號配對輔助線 */
    "editor.guides.bracketPairs": true,
    /* 是否啟用隱形字元的醒目提示 */
    "editor.unicodeHighlight.invisibleCharacters": true,
    /* 是否啟用和ASCII混淆的字元的醒目提示 */
    "editor.unicodeHighlight.ambiguousCharacters": true,
    /* 貼上時是否自動format */
    "editor.formatOnType": true,
    /* 自訂VSCode語法高亮顏色 */
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "if/for/while/return/#define/#include",
                "scope": "keyword.control",
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ],
        "[Default Dark+]": {
            "types": "#41c9b0",
            "comments": "#7d7d7d",
            "functions": "#ccc541",
            "numbers": "#fa8500",
            "textMateRules": [
                {
                    "name": "parameters of functions",
                    "scope": "variable.parameter",
                    "settings": {
                        "fontStyle": "italic"
                    }
                }
            ]
        }
    },
    "editor.semanticTokenColorCustomizations": {
        "[Default Dark+]": {
            "enabled": true,
            "rules": {
                "constant": "#22c5ee",
                "enumMember": "#22c5ee"
            }
        }
    },
    /* VSCode的圖示主題 */
    "workbench.iconTheme": "material-icon-theme",
    /* VSCode的顏色主題 */
    "workbench.colorTheme": "Default Dark+",
    /* 自訂VSCode主題中各種顏色 */
    "workbench.colorCustomizations": {
        "editor.background": "#1e1e1e",
        "[Default Dark+]": {
            "titleBar.activeBackground": "#1d212d",
            "titleBar.activeForeground": "#cccccc",
            "activityBar.background": "#1d212d",
            "activityBarBadge.background": "#fa8500",
            "tab.inactiveBackground": "#1d212d",
            "tab.activeForeground": "#f4f4e4",
            "tab.hoverForeground": "#fa8500",
            "editorGroupHeader.tabsBackground":"#1d212d",
            "tab.activeBackground": "#2f3649",
            "statusBar.background": "#2f3649",
            "statusBar.debuggingBackground": "#68217a",
            "statusBar.noFolderBackground": "#333333",
            "statusBar.foreground": "#cccccc",
            "terminal.background": "#1d212d",
            "terminal.foreground": "#cccccc",
            "panel.background":"#1d212d",
            "editor.foldBackground":"#2f3649cc",
            "breadcrumb.focusForeground": "#fa8500"
        }
    },
    /* 視窗標題列和功能表的外觀 */
    "window.titleBarStyle": "custom",
    /* 視窗放大縮小程度 */
    "window.zoomLevel": 1,
    /* 終端機是否啟用GPU加速 */
    "terminal.integrated.gpuAcceleration": "off",
    /* 預設終端機 */
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    /* 終端機游標閃爍 */
    "terminal.integrated.cursorBlinking": true,
    /* 終端機游標樣式 */
    "terminal.integrated.cursorStyle": "line",
    /* 終端機游標寬度(只有游標樣式為line時有效) */
    "terminal.integrated.cursorWidth": 1,
    /* 比較文件差異時是否顯示沒有差異的區域 */
    "diffEditor.hideUnchangedRegions.enabled": true,
    /* Markdown PDF相關設定 */
    "markdown-pdf.displayHeaderFooter": false,
    "markdown-pdf.highlightStyle": "github.css",
    "markdown-pdf.styles": [
        /* 自訂CSS樣式的路徑 */
        "D:\\\\GitHub\\\\VSCode Settings\\\\markdownpdf.css"
    ]
}